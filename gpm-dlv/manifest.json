{
    "name": "Google Play Music Default Library View",
    "version": "0.0.2",
    "manifest_version": 2,
    "description": "Changes the default view in the 'My Library' section of Google Play Music",

    "permissions": [
        "storage"
    ],

    "content_scripts": [
        {
            "matches": ["*://play.google.com/music/listen*"],
            "js": ["js/main.js"]
        }
    ],

    "options_page": "html/options.html"
}
